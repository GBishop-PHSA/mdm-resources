{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib/es5",
    "module": "esnext",
    "lib": ["ES2017", "DOM"],
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./types/**/*.d.ts"],
  "atom": {
    "rewriteTsconfig": false
  }
}
